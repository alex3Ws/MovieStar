<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FPeliculas">


    <ProgressBar
        android:id="@+id/progreso"
        style="?android:attr/progressBarStyle"
        android:layout_width="114dp"
        android:layout_height="136dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/busqueda"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimary"
        android:searchIcon="@drawable/clock"
        android:commitIcon="@drawable/checked"
        android:searchHintIcon="@drawable/eye"
        android:closeIcon="@drawable/ic_menu_camera"
        android:goIcon="@drawable/ic_menu_send">

    </android.support.v7.widget.SearchView>

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5A6ABC"
        android:layout_below="@id/busqueda" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_below="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Spinner
            android:id="@+id/spalgo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Spinner
            android:id="@+id/spgenero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Spinner
            android:id="@+id/spaÃ±o"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"/>
    </LinearLayout>


    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5A6ABC"
        android:layout_below="@id/layout" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycledView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/separator2" />



</RelativeLayout>