<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.FDatosPeli">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tvTituloOriginal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="Titulo original: "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTituloOriginal2"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tvTituloOriginal"
                    android:layout_alignTop="@+id/tvTituloOriginal"
                    android:layout_marginTop="30dp"
                    android:text="Avengers: Infinity War" />

                <TextView
                    android:id="@+id/tvCompañias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tvTituloOriginal"
                    android:layout_marginEnd="120dp"
                    android:text="Compañias:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCompañias2"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tvCompañias"
                    android:layout_alignTop="@+id/tvTituloOriginal2"
                    android:text="Walt Disney Pictures, Marvel Studios" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl1"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/tvGenero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="Género: "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGenero2"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/tvGenero"
                    android:layout_alignTop="@id/tvGenero"
                    android:layout_marginTop="30dp"
                    android:text="Accion, Ciencia Ficcion, Fantasia, Amor" />

                <TextView
                    android:id="@+id/tvPais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tvGenero"
                    android:layout_marginEnd="171dp"
                    android:text="Pais"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPais2"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tvPais"
                    android:layout_alignTop="@+id/tvGenero2"
                    android:text="Estados Unidos" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/tvActores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="Actores: "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvActores2"
                    android:layout_width="376dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tvActores"
                    android:layout_alignTop="@+id/tvActores"
                    android:layout_marginTop="30dp"
                    android:text="Alejandro Rosa Gail, Salobrar Vicente Vallinot, Maria del Mar Carros Simon, Bryan Agi, Adrián Huerta Berrocal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl3"
                android:layout_marginBottom="85dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/tvSinopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:text="Sinopsis: "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSinopsis2"
                    android:layout_width="376dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tvSinopsis"
                    android:layout_alignTop="@+id/tvSinopsis"
                    android:layout_marginTop="30dp"
                    android:text="Vengadores: Infinity War seguirá la lucha de los superhéroes de Marvel contra el mayor villano al que se han enfrentado nunca: Thanos. Su único objetivo será detener a este poderoso antagonista e impedir que se haga con el control de la galaxia. De nuevo veremos al grupo formado por Iron Man, Capitán América, Viuda negra, Ant-Man, Ojo de Halcón, Thor y Hulk, entre otros. En su nueva e impactante aventura, las Gemas del Infinito estarán en juego, unos querrán protegerlas y otros controlarlas, ¿quién ganará?" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbEyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tag="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965"
        app:srcCompat="@drawable/eye" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tag="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965"
        app:srcCompat="@drawable/clock" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tag="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965"
        app:srcCompat="@drawable/favorite" />



</android.support.constraint.ConstraintLayout>